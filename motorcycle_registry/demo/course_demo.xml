<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Definición del modelo -->
        <record id="model_name" model="ir.model">
            <field name="name">Nombre del Modelo</field>
            <field name="model">nombre_del_modelo</field>
            <field name="description">Descripción del Modelo</field>
        </record>

        <!-- Definición de campos del modelo -->
        <record id="field_name" model="ir.model.fields">
            <field name="name">nombre_del_campo</field>
            <field name="model_id" ref="model_name"/>
            <field name="field_description">Descripción del Campo</field>
            <field name="ttype">tipo_de_campo</field>
            <!-- Otros atributos del campo según sea necesario -->
        </record>

        <!-- Otros registros y campos pueden ser definidos aquí -->

    </data>
</odoo>
